<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:background="@drawable/card_background_selector"
              android:descendantFocusability="afterDescendants"
                >
<RelativeLayout
    android:id="@+id/chatboxbig_layout"
    android:background="@drawable/card_background_selector"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"

    android:weightSum="1">
    <com.example.administrator.pass.tools.CircleImageView
        android:id="@+id/CircleView_chatboxbig"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />

    <TextView
        android:text="person interdusion"
        android:id="@+id/tv_chatboxbig1"
        android:layout_toRightOf="@id/CircleView_chatboxbig"
        android:layout_width="357dp"
        android:layout_height="20dp"
        />

    <TextView
        android:text="name"
        android:id="@+id/tv_chatboxbig"
        android:layout_width="357dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/CircleView_chatboxbig"
        android:layout_toEndOf="@+id/CircleView_chatboxbig"/>
</RelativeLayout>
    <TextView

        android:id="@+id/tv_chatboxbig2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
</LinearLayout>

